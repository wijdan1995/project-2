<h1>My Projects</h1>

<%= link_to 'Add new project', new_project_path ,class:"btn btn-secondary btn-lg btn-block"%>
<hr>
<div class="card-columns">
	<% @projects.each do |project| %>
		<div class="card main-view">
			<div class="card-body">
				<h2 class="card-title">
					<%= link_to project.title, project %>
				</h2>
				<p class="card-text">
					<%= project.description %>
				</p>
				<p>
					<%# <%= link_to 'Show', project %>
					<div class="btn-group" role="group">
						<%= link_to 'Edit', edit_project_path(project) , class:"btn btn-outline-dark btn-sm"%>
						<%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-outline-dark btn-sm"%>
					</div>
				</p>
				<div class="card-footer">
					Added <%= time_ago_in_words(project.created_at) %> ago
				</div>
			</div>
		</div>
	<% end %>
</div>


